<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="trabalho.sine.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/searchActivity"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:background="@color/Sine4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_vaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="@string/search_vaga"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/lupa"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="TODO"
                android:src="@drawable/lupa_employment" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/favoriteActivity"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:background="@color/Sine3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vagasfavoritas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="@string/favorite_vaga"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/estrela"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="TODO"
                android:src="@drawable/favorite_border" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchForGraphicActivity"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_weight="1"
            android:background="@color/Sine2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mediasalarial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="@string/media_salarial"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/grafico"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="TODO"
                android:src="@drawable/graphic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoActivity"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_weight="1"
            android:background="@color/Sine1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="@string/info"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/sobre"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="TODO"
                android:src="@drawable/about" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
